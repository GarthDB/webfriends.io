doctype html
html
  head
    title= title
    if process.env.NODE_ENV == 'development'
      link(rel='stylesheet', href='/css/reset.css')
      link(rel='stylesheet', href='/css/fonts/stylesheet.css')
      link(rel='stylesheet', href='/css/style.css')
      link(rel="stylesheet", href="/js/mediaelement/mediaelementplayer.min.css")
    else
      style
        include:css ../public/css/reset.css
        include:css ../public/css/fonts/stylesheet.css
        include:css ../public/css/style.css
        include:css ../public/js/mediaelement/mediaelementplayer.min.css
    meta(name='viewport', content='width=device-width, initial-scale=1, minimal-ui')
  body(itemscope, itemtype="http://schema.org/WebPage")
    span.details
      meta(itemprop="description", content="A weekly podcast about the web and the friends that make it.")
      span(itemscope, itemprop="author", itemtype="http://schema.org/Person")
        meta(itemprop="url", content="http://www.garthdb.com")
        meta(itemprop="name", content="Garth Braithwaite")
    header.mainheader
      a(href="/"): img(src="/img/web-friends-logo.svg", alt="Web Friends", class="logo")
      nav
        ul
          li: a(href="/") home
          li: a(href="/schedule") schedule
          li: a(href="http://goodstuff.fm/advertise/") sponsor
          li: a(href="https://itunes.apple.com/us/podcast/web-friends/id843374356?mt=2") itunes
          li: a(href="http://goodstuff.fm/webfriends/feed") rss
    main#content
      aside.sidemenu
        block sidemenu
          include partials/sidemenu
      .maincontent
        block content
    footer.mainfooter
      nav
        ul
          li Check out the <a href="/schedule">upcoming episodes</a>.
          li <a href="http://goodstuff.fm/advertise/">Sponsor</a> future episodes.
          li Subscribe and write a review on <a href="https://itunes.apple.com/us/podcast/web-friends/id843374356?mt=2">iTunes</a>.
          li Subscribe to the <a href="http://goodstuff.fm/webfriends/feed">MP3 RSS Feed</a>
          li Follow <a href="http://www.twitter.com/webfriendsio">@webfriendsio</a> on Twitter
          li <a href=""></a>
      | by&nbsp;
      a(href="https://plus.google.com/110061908980781621401/", rel="author") Garth Braithwaite
    script(src="//cdnjs.cloudflare.com/ajax/libs/jquery/2.0.3/jquery.min.js")
    script
      include:js ../public/js/mediaelement/mediaelement-and-player.min.js
    //- script(src="/js/mediaelement/mediaelement-and-player.min.js")
    script.
      $('audio').mediaelementplayer();
    include partials/analytics
