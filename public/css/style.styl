html
  font-size 18px
body
  font-family 'Source Sans Pro', sans-serif
  color #333
  font-size 1rem
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
.mainheader
  background url("../img/halftone_bg.svg") #c1272d no-repeat bottom center
  width 100%
  height 350px
  background-size contain
  text-align center
  position relative
  box-sizing border-box
  padding-bottom 60px
  img
    width 820px
    margin-top -10px
  nav
    width 100%
    height 60px
    position absolute
    bottom 0
    left 0
    background rgba(138,28,32,0.6)
    ul
      width 100%
      max-width 800px
      position relative
      margin 0 auto
      height 100%
      text-align right
    li
      display inline-block
      height 100%
      line-height 60px
      box-sizing border-box
    a
      display inline-block
      box-sizing border-box
      padding 0 20px
      color white
      cursor pointer
      &:hover
        text-decoration none
        background rgba(138,28,32,1)
.logo
  max-width 844px
  width 100%
  height auto
  position relative
#content
  max-width 820px
  position relative
  margin 20px auto 0
h1
  font-size 2.5rem
  margin 40px 0 10px
p
  line-height 1.4rem
a
	color #347187
	text-decoration none
a:hover
	text-decoration underline
.episode
  display inline-block
  margin-bottom 50px
  .back, .front
    width 300px
    height 400px
    box-shadow 1px 7px 8px rgba(0,0,0,0.2)
    display inline-block
    overflow hidden
  .front
    background url('/img/halftone_bg_small.svg') #FFEBAF no-repeat
    background-position right bottom
    background-size 241px 580px
    position relative
    margin-right 20px
    .guestname
      position absolute
      bottom 20px
      left 20px
      z-index 3
  .front_image
    width 100%
    height 100%
    position absolute
    top 0
    left 0
    z-index 2
  .logo_small
    position absolute
    top 15px
    left 15px
    z-index 3
  .title
    color white
    position absolute
    right 15px
    top 15px
    z-index 1
    font-family 'ostrich_sans'
    font-size 24px
    padding 5px
    &:before
      content ''
      width 0px
      height 0px
      border-style solid
      border-width 0 112px 112px 0
      border-color transparent #42AF9B transparent transparent
      position absolute
      z-index -1
      right 0
      top 0
  .guestname
    font-family 'blackout'
    color #e24c68
    font-size 30px
  .back
    background #F0E8DC
    box-sizing border-box
    padding-top 10px
    color #6e5f5c
    position relative
    header
      background #F7BE5A
      height 40px
      box-sizing border-box
      padding 0 10px
      display flex
      justify-content space-between
      align-items center
    .guestname
      font-size 26px
      position relative
      top 2px
    .guestname, .episodenumber
      display inline-block
    .episodenumber
      font-family Impact, Charcoal, sans-serif
      font-size 24px
    .avatar
      width 80px
      height 80px
      background-size cover
      border-radius 40px
      margin 0 10px 0 0
      float left
    .backdetails
      padding 10px 20px
    dl
      font-size 14px
      a
        font-weight 400
    .toplist
      margin-top 6px
      margin-bottom 15px
    dt
      font-weight 700
      margin-bottom 2px
    dd
      font-weight 400
      margin-bottom 10px
      p
        line-height normal
    .links
      font-size 14px
      list-style none
      li
        display inline-block
        &.twitter:before
          content url('/img/twitter.svg')
          vertical-align center
    .audioplayer
      background white
      width 100%
      height 95px
      position absolute
      bottom 14px
      box-sizing border-box
      padding 10px 20px
#content
  box-sizing border-box
  padding-bottom 30px
  padding-left 200px
  position relative
.sidemenu
  position absolute
  left 0
  top 0
  width 160px
  vertical-align top
.description
  border-bottom 1px solid #CCC
  padding-bottom 10px
  margin-bottom 40px
  p
    line-height 1.5rem
.caption
  margin-top 0.8rem
  font-size 0.7rem
.sidenav
  font-size 0.75rem
  line-height 1.3rem
  margin-bottom 60px
.sponsor
  font-size 0.7rem
.ad
  margin-top 10px
  width 120px
  height 90px
  background gray

@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
  .episode .back
    dt
      font-weight 600
    dd
      font-weight 300
